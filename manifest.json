{
  "name": "Xero Simple Reconcile",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Help to click the OK buttons. Start from last page.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Reconcile!"
  },
  "content_scripts": [
    {
      "matches": [ "https://go.xero.com/Bank/BankRec.aspx?accountID=*"],
      "js": ["script.js"]
    }
  ],
  "permissions": [
    "https://*/*",
    "http://*/*",
    "storage",
    "tabs"
  ]
}